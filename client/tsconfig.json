
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@api/*": ["./pages/api/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@functions/*": ["./functions/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/pages/api/[...nextauth].js",
  ],
  "exclude": [
    "node_modules"
  ]
}
